<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/CartItemImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/CartItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/CartItemImage"
        android:text="Orange"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/CartItemNameUrdu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/CartItemImage"
        android:text="(Kinu)"
        android:layout_below="@id/CartItemName"
        android:textStyle="italic"/>

    <!--<Spinner-->
        <!--android:id="@+id/ItemPriceWithQuantity"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_toRightOf="@id/ItemImage"-->
        <!--android:text="Rs.20 - 250 gm"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_below="@id/ItemNameUrdu"-->
        <!--android:background="#EAECEE"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:textAlignment="center"-->
        <!--/>-->

    <TextView
    android:id="@+id/CartItemPriceWithQuantity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/CartItemImage"
    android:text="Rs.20 - 250 gm"
    android:textColor="#000000"
    android:layout_below="@id/CartItemNameUrdu"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:background="#EAECEE"
    android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/CartItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/CartItemImage"
        android:text="Quantity 2"
        android:layout_alignBottom="@id/CartItemImage"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/CartItemNamePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 20/="
        android:layout_toRightOf="@id/CartItemQuantity"
        android:layout_alignBottom="@id/CartItemImage"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>


    <ImageView
        android:id="@+id/CartDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"/>

</RelativeLayout>